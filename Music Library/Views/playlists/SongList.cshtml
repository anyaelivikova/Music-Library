@model IEnumerable<Music_Library.Models.songs>


@{
    ViewBag.Title = "SongList";
}

<h2>SongList</h2>

<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Автор
        </th>
        <th>
            Длительность
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.song_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.author_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.duration)
    </td>
    <td>
        @Html.ActionLink("Редактировать", "Edit", new { id = item.id }) |
        @Html.ActionLink("Детали", "Details", new { id = item.id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.id })
    </td>
</tr>
    }

</table>