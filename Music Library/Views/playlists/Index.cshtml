@model IEnumerable<Music_Library.Models.playlists>

@{
    ViewBag.Title = "Список плейлистов";
}

<h2>Список плейлистов</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Обложка
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.playlist_name)
    </td>
    <td>
        <img style="width: 100px;height: 100px" src="@Url.Action("GetImage", new { id = item.id })" />
    </td>

    <td>
        @Html.ActionLink("Редактировать", "Edit", new { id = item.id }) |
        @Html.ActionLink("Детали", "Details", new { id = item.id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.id })
    </td>
</tr>
}

</table>
