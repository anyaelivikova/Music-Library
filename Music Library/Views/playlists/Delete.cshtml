@model Music_Library.Models.playlists

@{
    ViewBag.Title = "Удаление";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>playlists</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>

        <dd>
            @Html.DisplayFor(model => model.playlist_name)
        </dd>

        <dt>
            Обложка
        </dt>

        <dd>
            @Html.DisplayFor(model => model.playlist_cover)
        </dd>

        <dt>
            Пользователь
        </dt>

        <dd>
            @Html.DisplayFor(model => model.users.user_name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку", "Index")
        </div>
    }
</div>
